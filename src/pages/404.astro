---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---
<MainLayout title="404: Page Not Found">
  <div class="flex flex-col items-center justify-center h-screen">
    <Image
      src={error}
      alt="404 Error"
      class="w-96 h-auto"
      width={250}
      height={250}
      loading="lazy"
      decoding="async"
    />
    <h1 class="text-4xl font-bold text-gray-900 mt-8">404: Page Not Found</h1>
    <p class="text-gray-700 text-lg my-12">
      The page you are looking for might have been removed or is temporarily
      unavailable.
    </p>
    <a
      href="/"
      class="mt-12 px-6 py-3 text-white bg-indigo-700 rounded-lg hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300"
      >Go back to Home</a
    >
  </div>
</MainLayout>